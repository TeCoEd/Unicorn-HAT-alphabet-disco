import unicornhat as UH
import time, colorsys

xLED = 2
yLED = 0

print xLED, yLED

###LED ALPHABET DICTIONARY###

LED_alpha = {"a": (0, 0), "b": (0, 1)}

final_coordinates = []
  
word = raw_input("Give me the letters")

###checks that the letters are in the input are in the
##LED APLHA dictionay and returns the keys?

for letter in word:
    LED_co_ord = LED_alpha[letter]
    final_coordinates.append(LED_co_ord)

print final_coordinates
print type(final_coordinates)                
                  
    
UH.clear
UH.brightness(0.1)
UH.set_pixel(final_coordinates, 0, 255, 0)
UH.show()
time.sleep(1)
